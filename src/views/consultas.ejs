  <div class="container">      
    <div class="row mt-3">
      <div class="row mt-2">
        <div class="">
            <table class="table table-bordered table-hover">
              <thead >
                <th style="vertical-align: middle; text-align: center;">NÂº</th>
                <th style="vertical-align: middle; text-align: center;">Numero legajo</th>
                <th style="vertical-align: middle; text-align: center;">Nombre y apellido</th>
                <th style="vertical-align: middle; text-align: center;">Domicilio</th>
                <th style="vertical-align: middle; text-align: center;">Codigo Postal</th>
                <th style="vertical-align: middle; text-align: center;">Fecha de nacimiento</th>
                <th style="vertical-align: middle; text-align: center;">Email</th>
                <th style="vertical-align: middle; text-align: center;">Grupo sanguineo</th>
                <th style="vertical-align: middle; text-align: center;">Telefono fijo</th>
                <th style="vertical-align: middle; text-align: center;">Telefono movil</th>
                <th style="vertical-align: middle; text-align: center;">DNI</th>
              </thead>
              <tbody>
                <% if (data) {%>
                  <% for (var i=0; i<data.length; i++){%>
                    <tr>
                      <td><%=(i+1)%></td>
                      <td><%=data[i].leg_alumno%></td>
                      <td><%=data[i].apyn_alumno%></td>
                      <td><%=data[i].dom_alumno%></td>
                      <td><%=data[i].cod_postal%></td>
                      <td><%=data[i].fecha_nac_alumno.getDate()+"/"+(data[i].fecha_nac_alumno.getMonth()+1)+"/"+data[i].fecha_nac_alumno.getFullYear()%></td>
                      <td><%=data[i].email_alumno%></td>
                      <td><%=data[i].grupo_sang_alumno%></td>
                      <td><%=data[i].tel_fijo_alumno%></td>
                      <td><%=data[i].tel_movil_alumno%></td>
                      <td><%=data[i].dni_alumno%></td>
                    </tr>
                  <% } %>
              <% } %>     
              </tbody>

            </table>
      </div>
    </div>
  </div>

</body>
